{
    "name": "SitePress",
    "description": "A beautiful & open-source content platform. Powered by Webslides, Laravel, and Contentful.",
    "keywords": [
        "Productivity",
        "Publishing",
        "CMS",
        "HTML5",
        "Blog",
        "Laravel",
        "Contentful"
    ],
    "website": "https://sitepress.herokuapp.com",
    "repository": "https://github.com/luckyrabbitllc/SitePress",
    "logo": "https://images.contentful.com/x5o3atz1wqhm/2PWSbcsefYImQyMuqcIuGi/5efaa2c98a4819ef729885a7c3aa381c/App_Icon_2x.png",
    "success_url": "/",
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize",
            "php artisan migrate --force"
        ],
        "post-update-cmd": [
            "php artisan command:ImportDefaultSpace"
        ]
    },
    "env": {
        "SECRET_TOKEN": {
            "description": "A secret key for verifying the integrity of signed cookies.",
            "generator": "secret"
        },
        "APP_DEBUG": {
            "description": "Set to TRUE to enable debugging messages.",
            "value": "FALSE"
        },
        "APP_KEY": {
            "description": "Encryption key.",
            "value": "base64:ICO5NZdtA3yqmcwrwz3/NUuqrZz0VwvdgocA1HWYckw="
        },
        "APP_URL": {
            "description": "URL for this app.",
            "value": "https://xxxxx.herokuapp.com/"
        },
        "CONTENTFUL_API_KEY": {
            "description": "Contentful API Key.",
            "value": "XXXXX"
        },
        "CONTENTFUL_SPACE_ID": {
            "description": "Contentful Space ID.",
            "value": "XXXXX"
        },
        "CONTENTFUL_MANAGEMENT_TOKEN": {
            "description": "Contentful Management Token.",
            "value": "XXXXX"
        }
    },
    "formation": {
        "web": {
            "quantity": 1,
            "size": "Free"
        }
    },
    "image": "heroku/php",
    "addons": [
        {
            "plan": "heroku-postgresql",
            "options": {
                "version": "9.5"
            }
        }
    ],
    "buildpacks": [
        {
            "url": "https://github.com/heroku/heroku-buildpack-nodejs#v83",
            "url": "https://github.com/heroku/heroku-buildpack-php"
        }
    ],
    "environments": {
        "test": {
            "scripts": {
                "test": "bundle exec rake test"
            }
        }
    }
}