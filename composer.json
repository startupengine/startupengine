{
    "name": "luckyrabbitllc/sitepress",
    "description": "A beautiful & open-source content platform. Powered by Webslides, Laravel, and Contentful.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "andreasindal/laravel-markdown": "1.0",
        "auth0/login": "~5.0",
        "barryvdh/laravel-debugbar": "^2.4",
        "consoletvs/charts": "4.*",
        "contentful/laravel": "^2.0",
        "laravel/framework": "5.4.*",
        "laravel/scout": "^3.0",
        "laravel/tinker": "~1.0",
        "sentry/sentry-laravel": "^0.7.0",
        "spatie/laravel-analytics": "^3.0",
        "spatie/laravel-newsletter": "^3.6",
        "wangaz/laravel-semantic-ui-css": "^1.2"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
